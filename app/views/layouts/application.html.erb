                </li>
                
                <li>
                  <a href="<%= vendas_path%>" class="menulink"><i class="fa fa-cart-plus fa-fw"></i> Vendas</a>
                </li>
                
                <li>
                  <a href="<%= itens_path%>" class="menulink"><i class="fa fa-cart-plus fa-fw"></i> Itens</a>
                </li>
 <li>
                  <a href="<%= users_path%>" class="menulink"><i class="fa fa-users fa-fw"></i> Usu√°rios</a>
                </li>
                
                <li>
                    <a href="" class="menulink"><i class="fa fa-question fa-fw"></i> Ajuda</a>
                </li>
            </ul>
       
         <ul class="list-unstyled CTAs">
                <li>
                    <%= link_to('SAIR', destroy_user_session_path, method: :delete, class: 'download') %>
                </li>
            </ul>
           <ul class="list-unstyled CTAs">
                <li>
                   
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary colorprimarybtn">
                        <i class="fas fa-align-left"></i>
                        <span>Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto colorprimarybtn" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="">Dados Pessoais</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

          <div class="content container-fluid">
              <div class="container-fluid">
              
                <%= yield %>
                
              </div>
          </div>
        </div>
    </div>
    <%= render :partial => 'layouts/utilscripts' %>
  </body>
</html>
